<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".activity.MainActivity"

    android:id="@+id/drawerLayout">
    <!--tools:openDrawer="start"-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/homeBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1.7"
        android:gravity="center">
        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="学"
            android:textColor="@color/littleBlue"
            android:textSize="50sp"
            android:textStyle="bold"/>
        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="做"
            android:textColor="@color/red"
            android:textSize="50sp"
            android:textStyle="bold"/>
        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="菜"
            android:textColor="@color/orange"
            android:textSize="50sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:padding="16dp"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorPrimary"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/linearLayout"
            >
            <View

                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"/>


            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/magnifying_glass"/>


            <EditText

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:textAlignment="center"
                android:hint="搜索菜谱"
                android:id="@+id/ediText_main"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:src="@mipmap/btnsearch_red"
                android:id="@+id/find_main"
                android:visibility="invisible"/>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"/>

        </LinearLayout>
        <View
            android:layout_below="@id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorPrimary"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <TextView
                android:onClick="onClick"
                android:id="@+id/homeDishes_main"
                android:clickable="true"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="家常菜"
                android:drawableTop="@mipmap/recipe_lable_4_2"
                android:background="@drawable/main_item_select"/>
            <TextView
                android:onClick="onClick"
                android:id="@+id/fastFood_main"
                android:clickable="true"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="快手菜"
                android:drawableTop="@mipmap/recipe_lable_5_3"
                android:background="@drawable/main_item_select"/>
            <TextView
                android:onClick="onClick"
                android:id="@+id/iderFood_main"
                android:clickable="true"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="创意菜"
                android:drawableTop="@mipmap/recipe_lable_1_1"
                android:background="@drawable/main_item_select"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <TextView
                android:onClick="onClick"
                android:id="@+id/Vegetable_main"
                android:clickable="true"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="素菜"
                android:drawableTop="@mipmap/recipe_lable_5_1"
                android:background="@drawable/main_item_select"/>
            <TextView
                android:onClick="onClick"
                android:id="@+id/coolFood_main"
                android:clickable="true"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="凉菜"
                android:drawableTop="@mipmap/recipe_lable_2_3"
                android:background="@drawable/main_item_select"/>
            <TextView
                android:onClick="onClick"
                android:id="@+id/baking_main"
                android:clickable="true"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="烘焙"
                android:drawableTop="@mipmap/recipe_lable_4_1"
                android:background="@drawable/main_item_select"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <TextView
                android:onClick="onClick"
                android:id="@+id/noodle_main"
                android:clickable="true"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="面食"
                android:drawableTop="@mipmap/recipe_lable_3_1"
                android:background="@drawable/main_item_select"/>
            <TextView
                android:onClick="onClick"
                android:id="@+id/soup_main"
                android:clickable="true"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="汤"
                android:drawableTop="@mipmap/recipe_lable_3_2"
                android:background="@drawable/main_item_select"/>
            <TextView
                android:onClick="onClick"
                android:id="@+id/flavoring_main"
                android:clickable="true"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="自制调味料"
                android:drawableTop="@mipmap/recipe_lable_1_3"
                android:background="@drawable/main_item_select"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:onClick="onClick"
        android:padding="16dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/main_item_select"
        android:text="全部菜谱分类"
        android:id="@+id/classification_main"
        />
</LinearLayout>

<android.support.design.widget.NavigationView

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:headerLayout="@layout/layout_header"
    app:menu="@menu/nav"
    android:id="@+id/nav"
    android:layout_gravity="start">

</android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
